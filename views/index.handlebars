<!--Setup as a template for Handlebars to render to-->


<h1>Burgers!</h1>
<img alt="burger image" src=".../public/assets/img/Burger-Image.png">
<h2>Burgers that are not Devoured!</h2>

<ul>
  {{#each burgers}}
      {{#unless devoured}}
          <p class="notDevoured">{{xthis.burger_name}}</p>
      {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that are Devoured!</h2>

<ul>
    {{#each burgers}}
      {{#if devoured}}
          <p class="devoured">{{this.burger_name}} </p>
      {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger:</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Not Devoured!<br>
    <input type="radio" name="devoured" value="0"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>